<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CloudClient.Views.ClientWindow"
		Icon="/Assets/logo.png"
		xmlns:local="clr-namespace:CloudClient.Views"
        Title="ClientWindow"
		Height="450" Width="800"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaChromeHints="NoChrome"
		ExtendClientAreaTitleBarHeightHint="-1"
		SystemDecorations="None"
        TransparencyBackgroundFallback="Transparent" CornerRadius="20"
		DragDrop.AllowDrop="True">

	<Grid RowDefinitions="10*,90*">
		<!--第一行的内容-->
		<Border Grid.Row="0" BorderBrush="Gray" BorderThickness="0,0,0,0" Margin="0,0,0,0" Background="#0572b0" >
			<Grid ColumnDefinitions="2*,5*" >
				<TextBlock Grid.Column="0" Margin="12" HorizontalAlignment="Left" VerticalAlignment="Center" Text="文件上传进程:" FontWeight="Bold"/>
				
				<StackPanel Grid.Column="1" Orientation="Horizontal">
					
					<Button Grid.Column="0" Width="40" Height="40" Background="Transparent" 
							Margin="15,0" Click="SelectAllFile_Click">
						<Image Source="{SvgImage /Assets/Images/Home.svg}" Stretch="UniformToFill"></Image>
					</Button>

					<Button Grid.Column="1" Background="Transparent" Width="41" Height="40" 
							Margin="15,0" Click="SelectPicFile_Click">
						<Image Source="{SvgImage /Assets/Images/Picture.svg}" Stretch="UniformToFill"/>
					</Button>

					<Button Grid.Column="2" Background="Transparent" Width="40" Height="40" 
							Margin="15,0" Click="SelectTextFile_Click">
						<Image Source="{SvgImage /Assets/Images/File.svg}" Stretch="UniformToFill"/>
					</Button>

					<Button Grid.Column="3" Background="Transparent" Width="43" Height="40" 
							Margin="15,0" Click="SelectVideoFile_Click">
						<Image Source="{SvgImage /Assets/Images/Video.svg}"/>
					</Button>

					<Button Grid.Column="4" Background="Transparent" Width="40" Height="40" 
							Margin="15,0" Click="SelectOtherFile_Click">
						<Image Source="{SvgImage /Assets/Images/Other.svg}"/>
					</Button>

					<!--最小化-->
					<Button Background="Transparent" Margin="107,0,0,0" Width="32" Height="32"
							CornerRadius="5" Click="MinButton_Click">
						<Image Source="{SvgImage /Assets/Images/MinWindow.svg}" Stretch="UniformToFill"/>
					</Button>
					
					<!--最大化-->
					<Button x:Name="MaxButton" Background="Transparent" Margin="3,0,0,0" Width="34" Height="34"
							CornerRadius="5" Click="MaxButton_Click">
						<Image Source="{SvgImage /Assets/Images/MaxWindow.svg}"/>
					</Button>
					
					<!--恢复-->
					<Button x:Name="NormButton" Background="Transparent" Margin="3,0,0,0" Width="34" Height="34"
							CornerRadius="5" Click="NormButton_Click" IsVisible="False">
						<Image Source="{SvgImage /Assets/Images/NormWindow.svg}"/>
					</Button>
					
					<!--关闭-->
					<Button Margin="3,0,0,0" Background="Transparent" Width="32" Height="32" Click="CloseButton_Click" CornerRadius="5">
						<Image Source="{SvgImage /Assets/Images/Close.svg}" Stretch="UniformToFill"/>
					</Button>
				</StackPanel>
			</Grid>
		</Border>
		
		<!--第二行内容-->
		<Grid Grid.Row="1" ColumnDefinitions="2*,5*">	
			<!--左侧的滚动条-->
			<ScrollViewer Grid.Column="0" Height="390" VerticalScrollBarVisibility="Auto" BorderBrush="Gray">
				<ListBox x:Name="UploadingFileList" Background="AliceBlue">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="11"></TextBlock>

						</DataTemplate>

					</ListBox.ItemTemplate>
				</ListBox>
			</ScrollViewer>

			<!--右侧的文件列表-->
			<Grid Grid.Column="1" RowDefinitions="Auto,Auto">
				<Image Source="{SvgImage /Assets/Images/Talk.svg}" Opacity="0.4" Width="300" Height="300" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="-20,-400"></Image>

				<!--选择文件路径-->
				<Grid Grid.Row="0" Margin="0,8" ColumnDefinitions="Auto,Auto,Auto,Auto,Auto">
					<TextBox x:Name="ShowFilePath" Grid.Column="0" Margin="10,3,5,0" Background="#d4e6f3" IsReadOnly="True" 
							 Watermark="Choose a file path" BorderBrush="Transparent" Height="10" Width="330"/>
					
					<Button x:Name="ChooseButton" Grid.Column="1" Margin="5,3" Content="Choose" Background="#0572b0" Click="OpenFileButton_Click" Height="30"/>
					
					<Button x:Name="ConfirmButton" Grid.Column="2" Content="Confirm" Background="#0572b0" Height="30" Click="ConfirmButton_Click"/>
					
					<TextBlock Grid.Column="3" Width="20"></TextBlock>
					<Button x:Name="UpdateFile" Click="UpdateFile_Click" Grid.Column="4" HorizontalAlignment="Right" Height="40" Width="40">
						<Image Source="{SvgImage /Assets/Images/Update.svg}"/>
					</Button>
				</Grid>
				
				<!--可视化上传的文件-->
				<ScrollViewer Grid.Row="1" Height="300" VerticalScrollBarVisibility="Auto">
					<WrapPanel x:Name="FileWrapPanel" Grid.Row="1">
						<local:FileButton x:Name="FileIconButton"/>
					</WrapPanel>
				</ScrollViewer>
			</Grid>
		</Grid>
	</Grid>
</Window>
